<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.multiTenancy">DATABASE</property>
  <property name="hibernate.multi_tenant_connection_provider">util.multitenant.MultiTenantConnectionProviderImpl</property>
  <property name="connection_pool_size">1</property>
    
  <mapping class="modelo.ObjetoBasico"/>

  
 </session-factory>
</hibernate-configuration>
